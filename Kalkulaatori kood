<body>
    <div class="container mt-5 calculator-container">
        <div class="text-center">
            <input type="text" id="display" class="form-control calculator-input" disabled>
        </div>
        <div class="text-center mt-3">
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('7')">7</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('8')">8</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('9')">9</button>
        </div>
        <div class="text-center mt-3">
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('4')">4</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('5')">5</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('6')">6</button>
        </div>
        <div class="text-center mt-3">
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('1')">1</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('2')">2</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('3')">3</button>
        </div>
        <div class="text-center mt-3">
            <button class="btn btn-danger calculator-button" onclick="clearDisplay()">C</button>
            <button class="btn btn-primary calculator-button" onclick="appendToDisplay('0')">0</button>
            <button class="btn btn-success calculator-button" onclick="calculate()">=</button>
        </div>
        <!-- Operatorite nupud kalkulaatori all -->
        <div class="text-center operator-buttons">
            <button class="btn btn-warning" onclick="appendToDisplay('+')">+</button>
            <button class="btn btn-warning" onclick="appendToDisplay('-')">-</button>
            <button class="btn btn-warning" onclick="appendToDisplay('*')">*</button>
            <button class="btn btn-warning" onclick="appendToDisplay(':')">:</button> <!-- Jagamismärk kooloniks ':' muudetud -->
        </div>
    </div>

    <!-- Lisa Bootstrap JS ja jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    
    <script>
        // Kalkulaatori ekraan
        let display = document.getElementById('display');
        
        // Lisa tekst ekraanile
        function appendToDisplay(value) {
            display.value += value;
        }
        
        // Kustuta kogu sisu ekraanilt
        function clearDisplay() {
            display.value = '';
        }
        
        // Arvuta ja näita tulemust ekraanil
        function calculate() {
            try {
                display.value = eval(display.value);
            } catch (error) {
                display.value = 'Error';
            }
        }
    </script>
